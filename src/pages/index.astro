---
import Layout from '../layouts/Layout.astro';
import RevenueForcastMap from '../components/RevenueForcastMap.tsx';
import MarketAnalyticsCard from '../components/MarketAnalyticsCard.tsx';
---

<Layout title="Home">
	<div class="min-h-full bg-[#F9FAFB] dark:bg-[#1A1A1A]">


		{/* Revenue Forecasts */}
		<section class="pt-4 pb-8 bg-white dark:bg-[#2A2A2A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="mb-4">
					<div class="flex items-center justify-between gap-4">
						<h2 class="text-2xl font-normal text-[#2A2A2A] dark:text-gray-100">
							Active Locations - Forecast Summary
						</h2>
						
						{/* Database Status Indicator */}
						<div class="flex items-center gap-2">
							<div class="relative flex items-center justify-center">
								<div class="absolute w-2.5 h-2.5 bg-emerald-400 rounded-full animate-ping opacity-40"></div>
								<div class="relative w-2 h-2 bg-emerald-400 rounded-full"></div>
							</div>
							<span class="text-sm font-medium text-emerald-500 dark:text-emerald-400 uppercase tracking-wide">Live</span>
							<span class="text-sm text-gray-600 dark:text-gray-400">Database Connected</span>
						</div>
					</div>
				</div>
				
				<RevenueForcastMap client:load />
			</div>
		</section>

		{/* Year-to-Date Performance */}
		<section class="pt-8 pb-8 bg-white dark:bg-[#2A2A2A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="mb-4">
					<div class="flex items-center justify-between gap-4">
						<h2 class="text-2xl font-normal text-[#2A2A2A] dark:text-gray-100">
							Active Locations - Year-to-Date Performance
						</h2>
						
						{/* Database Status Indicator */}
						<div class="flex items-center gap-2">
							<div class="relative flex items-center justify-center">
								<div class="absolute w-2.5 h-2.5 bg-emerald-400 rounded-full animate-ping opacity-40"></div>
								<div class="relative w-2 h-2 bg-emerald-400 rounded-full"></div>
							</div>
							<span class="text-sm font-medium text-emerald-500 dark:text-emerald-400 uppercase tracking-wide">Live</span>
							<span class="text-sm text-gray-600 dark:text-gray-400">Database Connected</span>
						</div>
					</div>
				</div>
				
				{/* Performance Grid with Filters and View Toggle */}
				<div id="performance-section">
					<MarketAnalyticsCard 
						client:load
						market="all"
						accent="border-blue-500"
						accentColor="blue"
					/>
				</div>
			</div>
		</section>

		{/* Live Database Monitor */}
		<section class="py-12 bg-gray-50 dark:bg-[#1A1A1A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex items-center justify-between mb-8">
					<div>
						<h2 class="text-2xl font-bold text-[#2A2A2A] dark:text-gray-100 mb-2">Database Monitor</h2>
						<p class="text-sm text-gray-600 dark:text-gray-400">
							Live connection status • <span class="text-green-600 dark:text-green-400 font-mono">Active</span>
						</p>
					</div>
					<div class="flex gap-2">
						<button class="px-3 py-1.5 text-xs font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-[#2A2A2A] border border-gray-300 dark:border-gray-600 rounded hover:bg-gray-50 dark:hover:bg-[#333333] transition-colors">
							Test Endpoints
						</button>
						<button class="px-3 py-1.5 text-xs font-medium text-white bg-blue-600 dark:bg-blue-500 rounded hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors">
							Force Sync
						</button>
					</div>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
					{/* API Health */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg p-4 border border-gray-200 dark:border-gray-700">
						<div class="flex items-center justify-between mb-3">
							<h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">API Health</h3>
							<span class="px-2 py-0.5 text-xs font-mono bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded">OK</span>
						</div>
						<div class="space-y-2">
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Response Time</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">124ms</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Uptime (30d)</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">99.8%</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Active Queries</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">12</span>
							</div>
						</div>
					</div>

					{/* Data Sync */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg p-4 border border-gray-200 dark:border-gray-700">
						<div class="flex items-center justify-between mb-3">
							<h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Data Sync</h3>
							<div class="flex items-center gap-1">
								<div class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></div>
								<span class="text-xs font-mono text-green-600 dark:text-green-400">Live</span>
							</div>
						</div>
						<div class="space-y-2">
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Last Sync</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">2m ago</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Records Synced</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">1.2M</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Next Sync</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">28m</span>
							</div>
						</div>
					</div>

					{/* Market Data */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg p-4 border border-gray-200 dark:border-gray-700">
						<div class="flex items-center justify-between mb-3">
							<h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Market Data</h3>
							<span class="px-2 py-0.5 text-xs font-mono bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 rounded">Fresh</span>
						</div>
						<div class="space-y-2">
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">CAISO Latest</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">15m ago</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">ERCOT Latest</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">18m ago</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Curve Vintage</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">Today</span>
							</div>
						</div>
					</div>

					{/* DB Metrics */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg p-4 border border-gray-200 dark:border-gray-700">
						<div class="flex items-center justify-between mb-3">
							<h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">DB Metrics</h3>
							<span class="px-2 py-0.5 text-xs font-mono bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-400 rounded">Monitor</span>
						</div>
						<div class="space-y-2">
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Total Records</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">24.5M</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Storage Used</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">8.2 GB</span>
							</div>
							<div class="flex justify-between text-xs">
								<span class="text-gray-500 dark:text-gray-400">Cache Hit Rate</span>
								<span class="font-mono text-gray-900 dark:text-gray-100">94.3%</span>
							</div>
						</div>
					</div>
				</div>

				{/* Action Bar */}
				<div class="mt-4 flex items-center justify-between p-3 bg-white dark:bg-[#2A2A2A] rounded-lg border border-gray-200 dark:border-gray-700">
					<div class="flex items-center gap-4 text-xs">
						<div class="flex items-center gap-2">
							<span class="text-gray-500 dark:text-gray-400">Database:</span>
							<span class="font-mono text-gray-900 dark:text-gray-100">PostgreSQL 15.3</span>
						</div>
						<div class="h-3 w-px bg-gray-300 dark:bg-gray-600"></div>
						<div class="flex items-center gap-2">
							<span class="text-gray-500 dark:text-gray-400">Connection Pool:</span>
							<span class="font-mono text-gray-900 dark:text-gray-100">8/20 active</span>
						</div>
						<div class="h-3 w-px bg-gray-300 dark:bg-gray-600"></div>
						<div class="flex items-center gap-2">
							<span class="text-gray-500 dark:text-gray-400">Last Health Check:</span>
							<span class="font-mono text-green-600 dark:text-green-400">5s ago</span>
						</div>
					</div>
					<button class="text-xs text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium">
						View Logs →
					</button>
				</div>
			</div>
		</section>
	</div>
</Layout>