---
import Layout from '../layouts/Layout.astro';
import RevenueForcastMap from '../components/RevenueForcastMap.tsx';
import MarketAnalyticsCard from '../components/MarketAnalyticsCard.tsx';
---

<Layout title="Home">
	<div class="min-h-full bg-[#F9FAFB] dark:bg-[#1A1A1A]">


		{/* Revenue Forecasting Map */}
		<section class="py-12 bg-white dark:bg-[#2A2A2A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="mb-8">
					<h2 class="text-2xl font-bold text-[#2A2A2A] dark:text-gray-100 mb-2">Revenue Forecasting Map</h2>
					<p class="text-gray-600 dark:text-gray-400">Interactive energy arbitrage forecasting across market locations</p>
				</div>
				
				<RevenueForcastMap client:load />
			</div>
		</section>

		{/* Market Performance Overview */}
		<section class="py-12 bg-white dark:bg-[#2A2A2A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="mb-8">
					<h2 class="text-2xl font-bold text-[#2A2A2A] dark:text-gray-100 mb-2">Market Performance Overview</h2>
					<p class="text-gray-600 dark:text-gray-400">Energy arbitrage analytics and forecasting updated monthly</p>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
					<MarketAnalyticsCard 
						client:load
						market="CAISO"
						tbType="TB4"
						locations={["Goleta", "SP15", "NP15"]}
						lastUpdated="Dec 28, 2024 8:45 AM"
						ytdTB="7.85"
						yearAheadForecast="8.20"
						pValue="P35"
						pValueAmount="+0.45"
						boyForecast="8.45"
						neededToMeet="8.55"
						neededPValue="P25"
						projectedTotal="8.32"
						yoyChange="+4.2%"
						asProportion="1.10"
						accent="border-blue-500"
						accentColor="blue"
					/>
					<MarketAnalyticsCard 
						client:load
						market="ERCOT"
						tbType="TB2"
						locations={["Houston Hub", "Hidden Lakes", "Gunnar", "South Hub"]}
						lastUpdated="Dec 28, 2024 9:15 AM"
						ytdTB="9.12"
						yearAheadForecast="8.75"
						pValue="P65"
						pValueAmount="+1.24"
						boyForecast="8.95"
						neededToMeet="8.38"
						neededPValue="P85"
						projectedTotal="9.05"
						yoyChange="+7.8%"
						asProportion="1.25"
						accent="border-red-500"
						accentColor="red"
					/>
					<MarketAnalyticsCard 
						client:load
						market="SPP"
						tbType="TB4"
						locations={["North Hub", "South Hub"]}
						lastUpdated="Dec 28, 2024 7:30 AM"
						ytdTB="6.43"
						yearAheadForecast="6.90"
						pValue="P20"
						pValueAmount="-0.82"
						boyForecast="7.10"
						neededToMeet="7.37"
						neededPValue="P15"
						projectedTotal="6.73"
						yoyChange="-1.8%"
						asProportion="1.34"
						accent="border-green-500"
						accentColor="green"
					/>
				</div>
			</div>
		</section>


		{/* Analytics Modules Section */}
		<section class="py-16 bg-[#F9FAFB] dark:bg-[#1A1A1A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-[#2A2A2A] dark:text-gray-100 mb-4">Market Intelligence Modules</h2>
					<p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
						Comprehensive analysis tools for strategic planning and operational excellence
					</p>
				</div>
				
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
					{/* Long Term Outlook */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg shadow-sm p-8 border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:shadow-lg hover:-translate-y-1">
						<div class="flex items-center gap-3 mb-4">
							<div class="text-blue-600 dark:text-blue-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100">Long Term Outlook</h3>
						</div>
						<p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
							Strategic revenue forecasting and market fundamentals for long-term planning and investment decisions.
						</p>
						<ul class="space-y-2 mb-6">
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-blue-600 dark:text-blue-400 mt-1">•</span>
								Revenue curve analysis & forecasting
							</li>
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-blue-600 dark:text-blue-400 mt-1">•</span>
								Market fundamentals & trends
							</li>
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-blue-600 dark:text-blue-400 mt-1">•</span>
								Multi-year horizon planning
							</li>
						</ul>
						<a href="/long-term-outlook" class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors font-medium">
							Launch Long Term
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>

					{/* Short Term Outlook */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg shadow-sm p-8 border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:shadow-lg hover:-translate-y-1">
						<div class="flex items-center gap-3 mb-4">
							<div class="text-green-600 dark:text-green-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100">Short Term Outlook</h3>
						</div>
						<p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
							Real-time market operations, daily trading analysis, and near-term performance optimization.
						</p>
						<ul class="space-y-2 mb-6">
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-green-600 dark:text-green-400 mt-1">•</span>
								Daily market performance tracking
							</li>
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-green-600 dark:text-green-400 mt-1">•</span>
								Weekly congestion analysis
							</li>
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-green-600 dark:text-green-400 mt-1">•</span>
								Operational optimization insights
							</li>
						</ul>
						<a href="/short-term-outlook" class="inline-flex items-center gap-2 bg-green-600 text-white px-6 py-3 rounded-md hover:bg-green-700 transition-colors font-medium">
							Launch Short Term
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>

					{/* Risk/Structuring */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg shadow-sm p-8 border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:shadow-lg hover:-translate-y-1">
						<div class="flex items-center gap-3 mb-4">
							<div class="text-purple-600 dark:text-purple-400">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100">Risk/Structuring</h3>
						</div>
						<p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
							Advanced risk analytics, portfolio optimization, and deal structuring for strategic decision-making.
						</p>
						<ul class="space-y-2 mb-6">
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-purple-600 dark:text-purple-400 mt-1">•</span>
								Portfolio risk analysis
							</li>
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-purple-600 dark:text-purple-400 mt-1">•</span>
								Volatility assessment & hedging
							</li>
							<li class="flex items-start gap-2 text-gray-600 dark:text-gray-400">
								<span class="text-purple-600 dark:text-purple-400 mt-1">•</span>
								Contract structuring tools
							</li>
						</ul>
						<a href="/risk-structuring" class="inline-flex items-center gap-2 bg-purple-600 text-white px-6 py-3 rounded-md hover:bg-purple-700 transition-colors font-medium">
							Coming Soon
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
				</div>
			</div>
		</section>

		{/* Markets We Serve */}
		<section class="py-16 bg-white dark:bg-[#2A2A2A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-[#2A2A2A] dark:text-gray-100 mb-4">Markets We Serve</h2>
					<p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
						Deep expertise across the three major electricity markets where GridStor operates
					</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{/* CAISO */}
					<div class="bg-white dark:bg-[#1A1A1A] rounded-lg shadow-sm overflow-hidden border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:-translate-y-1">
						<div class="bg-blue-500 h-2"></div>
						<div class="p-6">
							<h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-3">CAISO</h3>
							<p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">California's grid operator serving 80% of the state</p>
							<div class="bg-gray-50 dark:bg-[#3A3A3A] rounded-md p-3">
								<span class="text-sm font-medium text-gray-700 dark:text-gray-300">45 GW battery storage target</span>
							</div>
						</div>
					</div>

					{/* ERCOT */}
					<div class="bg-white dark:bg-[#1A1A1A] rounded-lg shadow-sm overflow-hidden border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:-translate-y-1">
						<div class="bg-red-500 h-2"></div>
						<div class="p-6">
							<h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-3">ERCOT</h3>
							<p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">Texas's grid operator serving 26M customers</p>
							<div class="bg-gray-50 dark:bg-[#3A3A3A] rounded-md p-3">
								<span class="text-sm font-medium text-gray-700 dark:text-gray-300">12 GW battery storage target</span>
							</div>
						</div>
					</div>

					{/* SPP */}
					<div class="bg-white dark:bg-[#1A1A1A] rounded-lg shadow-sm overflow-hidden border border-gray-200 dark:border-gray-700 transition-all duration-200 hover:-translate-y-1">
						<div class="bg-green-500 h-2"></div>
						<div class="p-6">
							<h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-3">SPP</h3>
							<p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">Southwest Power Pool serving 17 states</p>
							<div class="bg-gray-50 dark:bg-[#3A3A3A] rounded-md p-3">
								<span class="text-sm font-medium text-gray-700 dark:text-gray-300">8 GW battery storage target</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		{/* System Status */}
		<section class="py-16 bg-[#F9FAFB] dark:bg-[#1A1A1A]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-[#2A2A2A] dark:text-gray-100 mb-4">Current System Status</h2>
					<p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
						Real-time monitoring of platform health and recent analytics updates
					</p>
				</div>
				
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
					{/* System Health */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg shadow-sm p-6 border border-gray-200 dark:border-gray-700">
						<h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">System Health</h3>
						<div class="space-y-3">
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-green-500 dark:text-green-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">All systems operational</span>
							</div>
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-green-500 dark:text-green-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">Last data refresh: 2 minutes ago</span>
							</div>
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-green-500 dark:text-green-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">99.8% uptime this month</span>
							</div>
						</div>
					</div>

					{/* Recent Updates */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg shadow-sm p-6 border border-gray-200 dark:border-gray-700">
						<h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Recent Updates</h3>
						<div class="space-y-3">
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-blue-500 dark:text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
								</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">Curve analysis updated 15 minutes ago</span>
							</div>
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-blue-500 dark:text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
								</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">Market forecasts refreshed 1 hour ago</span>
				</div>
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-blue-500 dark:text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">Daily analysis completed</span>
							</div>
						</div>
					</div>

					{/* Active Alerts */}
					<div class="bg-white dark:bg-[#2A2A2A] rounded-lg shadow-sm p-6 border border-gray-200 dark:border-gray-700">
						<h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Active Alerts</h3>
						<div class="space-y-3">
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-orange-500 dark:text-orange-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">ERCOT: High volatility expected 3-5 PM today</span>
							</div>
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-blue-500 dark:text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">SPP: Maintenance window scheduled this weekend</span>
				</div>
							<div class="flex items-start gap-3">
								<svg class="w-4 h-4 text-green-500 dark:text-green-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
						</svg>
								<span class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">CAISO: All systems normal</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>