---
import '../styles/globals.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} | Market Sight</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/lightning-bolt.svg" />
	</head>
	<body>
		<header class="bg-[#2A2A2A] dark:bg-[#1F1F1F] text-white shadow-sm relative">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center py-4">
					<div class="flex items-center gap-4">
						<!-- Logo - Always links to home -->
						<a 
							href="/" 
							class="flex items-center gap-3 hover:opacity-80 transition-opacity"
							aria-label="GridStor Market Sight Home"
						>
							<img 
								src="/gridstor-logo.png" 
								alt="GridStor Market Sight" 
								class="h-16"
								style="filter: brightness(0) invert(1); max-width: none;"
							/>
						</a>
						
					<!-- Navigation Links -->
					<nav 
						class="hidden lg:flex items-center gap-8"
						role="navigation"
						aria-label="Primary"
					>
						<!-- Long-Term Outlook Dropdown -->
						<div class="relative group">
							<button 
								class={`text-white hover:text-gray-300 transition-colors font-medium flex items-center gap-1 ${currentPath.startsWith('/revenue-forecasts') || currentPath.startsWith('/futures-market') || currentPath.startsWith('/long-term-outlook') ? 'text-gray-300' : ''}`}
							>
								Long-Term Outlook
								<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</button>
							<div class="absolute left-0 mt-0 pt-2 w-64 group-hover:block z-50">
								<div class="bg-white rounded-lg shadow-xl border border-gray-200">
									<!-- Revenue Forecast nested submenu -->
									<div class="relative submenu-group">
										<div class={`block px-4 py-3 text-sm transition-colors rounded-t-lg ${currentPath.startsWith('/revenue-forecasts') || currentPath.startsWith('/long-term-outlook/revenue-forecasts') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-gray-50'}`}>
											<div class="flex items-center justify-between">
												<div>
													<div class="font-medium">Revenue Forecast</div>
													<div class="text-xs text-gray-500 mt-0.5">Forecasting and analytics</div>
												</div>
												<svg class="w-3 h-3 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
												</svg>
											</div>
										</div>
										<div class="absolute left-full top-0 ml-0 pl-2 w-64 submenu-hover:block z-50">
											<div class="bg-white rounded-lg shadow-xl border border-gray-200">
												<a href="/long-term-outlook/revenue-forecasts" class={`block px-4 py-3 text-sm transition-colors rounded-t-lg ${currentPath.startsWith('/long-term-outlook/revenue-forecasts') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">Revenue Forecast Grapher</div>
													<div class="text-xs text-gray-500 mt-0.5">Build and compare forecast graphs</div>
												</a>
												<a href="/long-term-outlook/curve-browser" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 ${currentPath.startsWith('/long-term-outlook/curve-browser') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">Curve Browser</div>
													<div class="text-xs text-gray-500 mt-0.5">Browse and download curves</div>
												</a>
												<a href="/long-term-outlook/curve-schedule" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 ${currentPath.startsWith('/long-term-outlook/curve-schedule') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">Curve Schedule</div>
													<div class="text-xs text-gray-500 mt-0.5">Manage delivery schedules</div>
												</a>
												<a href="/long-term-outlook/curve-tracker" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 ${currentPath.startsWith('/long-term-outlook/curve-tracker') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">Curve Tracker</div>
													<div class="text-xs text-gray-500 mt-0.5">Track curve updates</div>
												</a>
												<a href="/long-term-outlook/fundamentals" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 rounded-b-lg ${currentPath.startsWith('/long-term-outlook/fundamentals') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">Market Fundamentals</div>
													<div class="text-xs text-gray-500 mt-0.5">Market analysis and insights</div>
												</a>
											</div>
										</div>
									</div>
									<!-- Futures Markets -->
									<a href="/long-term-outlook/futures-markets" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 rounded-b-lg ${currentPath.startsWith('/long-term-outlook/futures-markets') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
										<div class="font-medium">Futures Markets</div>
										<div class="text-xs text-gray-500 mt-0.5">Natural gas, power, heat rate futures</div>
									</a>
								</div>
							</div>
						</div>

						<!-- Short-Term Outlook Dropdown -->
						<div class="relative group">
							<button 
								class={`text-white hover:text-gray-300 transition-colors font-medium flex items-center gap-1 ${currentPath.startsWith('/short-term-outlook') ? 'text-gray-300' : ''}`}
							>
								Short-Term Outlook
								<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</button>
							<div class="absolute left-0 mt-1 pt-1 w-64 group-hover:block z-50">
								<div class="bg-white rounded-lg shadow-xl border border-gray-200">
									<!-- Homepage -->
									<a href="/short-term-outlook" class={`block px-4 py-3 text-sm transition-colors rounded-t-lg ${currentPath === '/short-term-outlook' || currentPath === '/short-term-outlook/' ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-gray-50'}`}>
										<div class="font-medium">Homepage</div>
										<div class="text-xs text-gray-500 mt-0.5">Market pricing and fundamentals overview</div>
									</a>
									<!-- CAISO nested submenu -->
									<div class="relative submenu-group">
										<div class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 ${currentPath.startsWith('/short-term-outlook/caiso') || currentPath.startsWith('/short-term-outlook/goleta') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-gray-50'}`}>
											<div class="flex justify-between items-center">
												<div>
													<div class="font-medium">CAISO</div>
													<div class="text-xs text-gray-500 mt-0.5">California ISO markets</div>
												</div>
												<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
												</svg>
											</div>
										</div>
										<div class="absolute left-full top-0 ml-0 pl-2 w-64 submenu-hover:block z-50">
											<div class="bg-white rounded-lg shadow-xl border border-gray-200">
												<a href="/short-term-outlook/caiso-system" class={`block px-4 py-3 text-sm transition-colors rounded-t-lg ${currentPath.startsWith('/short-term-outlook/caiso-system') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">CAISO System</div>
													<div class="text-xs text-gray-500 mt-0.5">System-wide fundamentals</div>
												</a>
												<a href="/short-term-outlook/goleta" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 rounded-b-lg ${currentPath.startsWith('/short-term-outlook/goleta') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
													<div class="font-medium">Goleta</div>
													<div class="text-xs text-gray-500 mt-0.5">Location-specific pricing</div>
												</a>
											</div>
										</div>
									</div>
									<!-- Weekly Insight -->
									<a href="/short-term-outlook/weekly-insight" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 ${currentPath.startsWith('/short-term-outlook/weekly-insight') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
										<div class="font-medium">Weekly Insight</div>
										<div class="text-xs text-gray-500 mt-0.5">Weekly market insights and analysis</div>
									</a>
									<!-- Likeday Tool -->
									<a href="/short-term-outlook/likeday" class={`block px-4 py-3 text-sm transition-colors border-t border-gray-100 rounded-b-lg ${currentPath.startsWith('/short-term-outlook/likeday') ? 'bg-blue-50 text-blue-700' : 'text-gray-700 hover:bg-blue-50 hover:text-blue-700'}`}>
										<div class="font-medium">Likeday Tool</div>
										<div class="text-xs text-gray-500 mt-0.5">Find similar historical days</div>
									</a>
								</div>
							</div>
						</div>

						<!-- Risk and Structuring Link -->
						<a 
							href="/risk-structuring" 
							class={`text-white hover:text-gray-300 transition-colors font-medium ${currentPath.startsWith('/risk-structuring') ? 'text-gray-300' : ''}`}
							aria-current={currentPath.startsWith('/risk-structuring') ? 'page' : undefined}
						>
							Risk and Structuring
						</a>
					</nav>
					</div>
				</div>
			</div>
			
			<!-- Solid Blue Decorative Strip -->
			<div 
				class="absolute bottom-0 left-0 right-0 h-2"
				style="background-color: #40C4DE;"
				aria-hidden="true"
			></div>
		</header>

	<main>
		<slot />
	</main>

</body>
</html>

<style is:global>
	html {
		font-family: 'Inter', system-ui, sans-serif;
	}

	/* Improved dropdown menu hover styles with smooth transitions */
	.group .group-hover\:block {
		display: none;
	}
	
	.group:hover .group-hover\:block,
	.group-hover\:block:hover {
		display: block;
	}
	
	/* Smooth fade-in effect for dropdowns */
	.group .group-hover\:block > div {
		animation: fadeIn 0.15s ease-in-out;
	}
	
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(-5px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	/* Keep dropdown visible with a bridge between button and menu */
	.group .group-hover\:block {
		/* The pt-2 class creates a bridge area that keeps hover active */
	}
	
	/* Nested submenu styles */
	.submenu-group {
		position: relative;
	}
	
	.submenu-group .submenu-hover\:block {
		display: none;
	}
	
	.submenu-group:hover .submenu-hover\:block,
	.submenu-hover\:block:hover {
		display: block;
	}
	
	/* Smooth fade-in for nested menus */
	.submenu-group .submenu-hover\:block > div {
		animation: fadeIn 0.15s ease-in-out;
	}
</style>
